<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="iut.tp.projets4.PlatActivity" >

    <Spinner
        android:id="@+id/spinnerPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/boutonConseille"
        android:layout_below="@+id/spinner" />

    <Button
        android:id="@+id/boutonConseille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/boutonValiderPlat"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:minHeight="60dp"
        android:minWidth="121dp"
        android:text="@string/boutonConseille" 
        android:onClick="@string/clicConseiller"/>

    <Button
        android:id="@+id/boutonValiderPlat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/boutonValiderMenu" 
        android:onClick="@string/clicValider"/>

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Spinner
        android:id="@+id/spinnerEntree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/spinnerDessert"
        android:layout_below="@+id/spinnerDessert" />

    <Spinner
        android:id="@+id/spinnerDessert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/boutonValiderPlat"
        android:layout_alignLeft="@+id/spinnerPlat" />

</RelativeLayout>